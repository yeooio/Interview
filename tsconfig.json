{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "types": ["vite/client", "vue"],
    "checkJs": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["ESNext", "DOM"],
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true  // Vite 负责编译，TS 只做类型检查
  },
  "include": [
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "vite.config.ts"  // 包含 Vite 配置文件
  ],
  "exclude": ["node_modules"]
}